{% extends 'base.html.twig' %}

{% block title %}Movie App!{% endblock %}

{% block body %}
    
<div class="container">
    <h2>Films populaires :</h2>
    <div class="row">
        <div class="col-md-12 d-flex justify-content-around flex-wrap">
        
        {% for movie in popularMovies.results %}
                <div class="card mt-3" style="width: 18rem;">
                <img src="{{ image_url }}{{ movie.poster_path }}" class="card-img-top" alt="{{ movie.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ movie.title }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Released on : {{ movie.release_date }}</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="card-footer mt-3" style="width: fit-content;">üëç{{ movie.vote_average }}üëé</h6>

                            <button class="btn btn-success" style="height: fit-content;">Infos</button>
                            
                        </div>
                    </div>
                </div>
        {% endfor %}

        </div>
    </div>
</div>
    


{% endblock %}

